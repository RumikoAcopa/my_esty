<h1>Edit your skin regiment here.</h1>
<form class="" action="/products/<%=@product.id%>" method="post">
<input type= "hidden" name="_method" value="patch">
<label for="name">Products:</label>
<input type= "text" name="Cleanser" value="<%= @product.cleanser%>">
<input type= "text" name="Toner" value= "<%= @product.toner%>">
<input type= "text" name="Serum" value= "<%= @product.serum%>">
<input type= "text" name="Moisturizer" value= "<%= @product.moisturizer%>">
<input type= "text" name="Exfoliator" value= "<%= @product.exfoliator%>">
<input type= "text" name="Mask" value= "<%= @product.mask%>">
<br>

<p>Choose a Cleanser: <select name= "cleanser"></p>
    <option value="Oil"<%= 'selected' if @product.cleanser == 'Oil' %>>Oil Based : Normal/Dry Skin Type</option>
    <option value="Creamy"<%= 'selected' if @product.cleanser == 'Creamy' %>>Creamy : Normal/Dry Skin Type</option>
    <option value="Brightening"<%= 'selected' if @product.cleanser == 'Brightening' %>>Brightening : Any Skin Type</option>
    <option value="Exfoliating Cleanser"<%= 'selected' if @product.cleanser == 'Exfoliating Cleanser' %>>Exfoliating Cleanser : Combo/Oily/Acneic Skin Type</option>
    <option value="Mandelic Cleanser"<%= 'selected' if @product.cleanser == 'Mandelic Cleanser' %>>Mandelic Cleanser : Any Skin Type/Hyperpigmented Skin</option>
    </select>
    <br>
    <p>Choose a Toner: <select name= "toner"></p>
    <option value="Hydrating"<%= 'selected' if @product.toner == 'Hydrating' %>>Hydrating Toner : Any Skin Type</option>
    <option value="Mandelic"<%= 'selected' if @product.toner == 'Mandelic' %>>Mandelic : Any Skin Type</option>
    <option value="Glycolic Pads"<%= 'selected' if @product.toner == 'Glycolic Pads' %>>Glycolic Pads : Oily/Combo/Acneic Skin Type</option>
    </select>
    <br>
    <p>Choose a Serum: <select name= "serum"></p>
    <option value="Plumping Collagen"<%= 'selected' if @product.serum == 'Plumping Collage' %>>Plumping Collagen : Any Skin Type</option>
    <option value="Lifting/Skin Tightening"<%= 'selected' if @product.serum == 'Lifting/Skin Tightening' %>>Lifting/Skin Tighetening : Any Skin Type</option>
    <option value="Brightening"<%= 'selected' if @product.serum == 'Brightening' %>>Brightening : Any Skin Type</option>
    <option value="Hydrating"<%= 'selected' if @product.serum == 'Hydrating' %>>Hydrating : Any Skin Type/Normal/Dry</option>
    <option value="Oil Control"<%= 'selected' if @product.serum == 'Oil Control' %>>Oil Control : Oily/Acneic/Combo</option>
    </select>
    <br>
    <p>Choose a Moisturizer: <select name= "moisturizer"></p>
    <option value="BB Cream Light w/Spf 15"<%= 'selected' if @product.moisturizer == 'BB Cream Light w/Spf 15' %>>BB Cream Light w/Spf 15</option>
    <option value="BB Cream Medium w/Spf 15"<%= 'selected' if @product.moisturizer == 'BB Cream Medium w/Spf 15' %>>BB Cream Medium w/Spf 15</option>
    <option value="BB Cream Dark w/Spf 15"<%= 'selected' if @product.moisturizer == 'BB Cream Dark w/Spf 15' %>>BB Cream Dark w/Spf 15</option>
    <option value="Hydrating"<%= 'selected' if @product.moisturizer == 'Hydrating' %>>Hydrating : Any Skin Type</option>
    <option value="Brightening"<%= 'selected' if @product.moisturizer == 'Brightening' %>>Brightening : Any Skin Type</option>
    <option value="Mattefying"<%= 'selected' if @product.moisturizer == 'Mattefying' %>>Mattefying : Any Skin Type</option>
    <option value="Spf 30"<%= 'selected' if @product.moisturizer == 'Spf 30' %>>Spf 30</option>
    </select>
    <br>
    <p>Choose a Exfoliator: <select name= "exfoliator"></p>
    <option value="Pumpkin Enzyme"<%= 'selected' if @product.exfoliator == 'Pumpkin Enzyme' %>>Pumpkin Enzyme</option>
    <option value="Gentle Scrub"<%= 'selected' if @product.exfoliator == 'Gentle Scrub' %>>Gentle Scrub</option>
    <option value="Volcanic Ash Scrub"<%= 'selected' if @product.exfoliator == 'Volcanic Ash Scrub' %>>Volcanic Ash Scrub</option>
    </select>
    <br>
    <p>Choose a Mask: <select name= "mask"></p>
    <option value="HydroJelly"<%= 'selected' if @product.mask == 'HydroJelly' %>>HydroJelly</option>
    <option value="Plumping Collagen"<%= 'selected' if @product.mask == 'Plumping Collagen' %>>Plumping Collagen</option>
    <option value="Brightening"<%= 'selected' if @product.mask == 'Brightening' %>>Brightening</option>
    <option value="Refreshing Eye"<%= 'selected' if @product.mask == 'Refreshing Eye' %>>Refreshing Eye</option>
    <option value="Collagen Eye"<%= 'selected' if @product.mask == 'Collagen Eye' %>>Collagen Eye</option>
    <option value="Clay"<%= 'selected' if @product.mask == 'Clay' %>>Kaolin Clay</option>
    </select>
    <br>
    <input type="submit" name="" value="Update">
</form>